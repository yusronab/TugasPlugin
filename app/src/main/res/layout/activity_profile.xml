<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/teal_700">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/tProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg2"
            android:layout_margin="20dp"
            android:gravity="center"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"/>
        <TextView
            android:id="@+id/tName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name : Yusron Arly Bazarah"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tNim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nim : 20090034"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tAdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Addres : Jl. Kuwusangka, Pagedangan RT.19/RW.03"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tProdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PHB - DIV Teknik Informatika"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btnBack1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:hint="BACK TO MAIN MENU"
            android:textColorHint="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/teal_200"/>
    </LinearLayout>
</LinearLayout>